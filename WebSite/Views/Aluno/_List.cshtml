@model ICollection<AlunoViewModel>

<table class="table table-striped table-bordered">
    <colgroup>
        <col width="100" />
        <col width="150" />
        <col width="100" />
        <col width="50" />
    </colgroup>
    <thead>
        <tr>
            <th>Matrícula</th>
            <th>Nome</th>
            <th>CPF</th>
            <th>Ação</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Matricula</td>
                <td>@item.Nome</td>
                <td>@item.Cpf</td>
                <td class="text-center">
                    <a class="btn btn-xs btn-default" asp-action="visualizar" asp-route-id="@item.Id">
                        <i class="fa fa-fw fa-search-plus"></i>
                    </a>
                    <a class="btn btn-xs btn-default" asp-action="editar" asp-route-id="@item.Id">
                        <i class="fa fa-fw fa-edit"></i>
                    </a>
                    <a class="btn btn-xs btn-default" asp-action="excluir" asp-route-id="@item.Id" data-fw-delete-item>
                        <i class="fa fa-fw fa-trash-o"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>